{
  "expo": {
    "name": "SecureShare",
    "slug": "SecureShare",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "secureshare",
    "userInterfaceStyle": "automatic",
    "jsEngine": "hermes",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.secureshare.app",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "SecureShare needs access to your photos to share and watermark images securely.",
        "NSCameraUsageDescription": "SecureShare needs camera access to capture documents for secure sharing.",
        "NSFaceIDUsageDescription": "Use Face ID to unlock SecureShare and protect your documents."
      }
    },
    "android": {
      "package": "com.secureshare.app",
      "newArchEnabled": true,
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "adaptiveIcon": {
        "backgroundColor": "#0e1117",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ],
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#3B82F6"
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0e1117",
          "dark": {
            "image": "./assets/images/splash-icon.png",
            "backgroundColor": "#0e1117"
          }
        }
      ],
      "expo-secure-store",
      [
        "expo-document-picker",
        {
          "iCloudContainerEnvironment": "Production"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "SecureShare needs access to your photos to share and watermark images securely.",
          "cameraPermission": "SecureShare needs camera access to capture documents for secure sharing."
        }
      ],
      "expo-local-authentication",
      "./plugins/withSecurityModules"
    ],
    "experiments": {
      "reactCompiler": true
    },
    "extra": {
      "privacyPolicy": "https://secureshare.app/privacy",
      "supportEmail": "support@secureshare.app",
      "eas": {
        "projectId": "YOUR_EAS_PROJECT_ID"
      }
    },
    "updates": {
      "url": "https://u.expo.dev/YOUR_EAS_PROJECT_ID"
    },
    "runtimeVersion": {
      "policy": "appVersion"
    }
  }
}